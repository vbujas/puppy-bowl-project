<% if @friends_images.count == 1 %>
  <% @friends_images.each_slice(1) do |row| %>
    <% row.each do |friend_image| %>
      <%= image_tag friend_image, class: "img-responsive" %>
    <% end %>
  <% end %>
<% elsif @friends_images.count == 2 %>
  <% @friends_images.each_slice(2) do |row| %>
    <div class="col-md-5 col-sm-5 col-xs-5 col-centered">
      <% @friends_images.each do |friend_image| %>
        <div class="col-md-6 col-sm-6 col-xs-6 nopadding">
          <%= image_tag friend_image, class: "img-responsive" %>
        </div>
      <% end %>
    </div>
  <% end %>
<% elsif @friends_images.count == 3 %>
  <% @friends_images.each_slice(3) do |row| %>
    <div class="col-md-7 col-sm-7 col-xs-7 col-centered">
      <% @friends_images.each do |friend_image| %>
        <div class="col-md-4 col-sm-4 col-xs-4 nopadding">
          <%= image_tag friend_image, class: "img-responsive" %>
        </div>
      <% end %>
    </div>
  <% end %>
<% elsif @friends_images.count <= 4 %>
  <% @friends_images.each_slice(4) do |row| %>
    <div class="col-md-9 col-sm-9 col-xs-9 col-centered">
      <% @friends_images.each do |friend_image| %>
        <div class="col-md-3 col-sm-3 col-xs-3 nopadding">
          <%= image_tag friend_image, class: "img-responsive" %>
        </div>
      <% end %>
    </div>
  <% end %>
<% end %>
