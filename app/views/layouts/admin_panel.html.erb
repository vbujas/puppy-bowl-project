<!DOCTYPE html>
<html>
<head>
  <title>Puppy Bowl Admin Panel</title>
  <%= stylesheet_link_tag    'admin_panel', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'admin_panel', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body style="background:none;background-color:#f8f8f8; padding-top:0px;" data-no-turbolink>

  <div id="wrapper">

    <!-- Navigation -->
    <nav class="navbar navbar-default navbar-static-top" role="navigation" style="margin-bottom: 0">

      <div class="navbar-header">
       <!-- <img class="img-responsive" src="/assets/pbx_logo.png" alt="Pbx logo" style="height:50px; margin-left:20px; display:inline;"> -->
       <%= image_tag "pbx_logo.png", class: "img-responsive", style: "height:50px; margin-left:20px; display:inline;" %>
       <h2 style="display:inline; color:#1D6D19"> Puppy Bowl XI - Admin Panel </h2>
        <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
          <span class="sr-only">Toggle navigation</span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </button>
        <!-- <a class="navbar-brand" href="/">Doctor Profile</a> -->
      </div>
      <!-- /.navbar-header -->

      <ul class="nav navbar-top-links navbar-right">
        <!-- /.dropdown -->
        <li class="dropdown">
          <a class="dropdown-toggle" data-toggle="dropdown" href="#">
            <i class="fa fa-user fa-fw"></i>  <i class="fa fa-caret-down"></i>
          </a>
          <ul class="dropdown-menu dropdown-user">
          <% if user_signed_in? %>
          <li><%= link_to '<i class="fa fa-sign-out fa-fw"></i> Sign out'.html_safe, destroy_user_session_path, :method => :delete %></li>
          <% else %>
          <li><%= link_to '<i class="fa fa-sign-out fa-fw"></i> Log in'.html_safe, new_user_session_path, :method => :get %></li>
          <% end %>
        </ul>
        <!-- /.dropdown-user -->
      </li>
      <!-- /.dropdown -->
    </ul>
    <!-- /.navbar-top-links -->

    <div class="navbar-default sidebar" role="navigation">
      <div class="sidebar-nav navbar-collapse">
        <ul class="nav" id="side-menu">
          <% if current_user %>
          <% if user_signed_in? %>
          <li>
           <%= link_to '<i class="fa fa-dashboard fa-fw"></i> Dashboard'.html_safe, puppies_path %>
          </li>
           <li>
           <%= link_to '<i class="fa fa-trophy fa-fw"></i> Puppies'.html_safe, '/admin/puppiesall' %>
          </li>
           <li>
            <%= link_to '<i class="fa fa-male fa-fw"></i> Teams'.html_safe, teams_path %>
          </li>
          <li>
            <%= link_to '<i class="fa fa-cog fa-fw"></i> Settings'.html_safe, settings_path %>
          </li>
          <% end %>
          <% end %>
        </ul>
      </div>
      <!-- /.sidebar-collapse -->
    </div>

  </nav>

</div>

<div id="page-wrapper">
  <% if flash[:notice] %>
    <div class="alert alert-success">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">Ã—</button>
      <%= flash[:notice] %>
    </div>
  <% end %>

  <%= yield %>

</div>
<!-- /#page-wrapper -->

</body>
</html>
